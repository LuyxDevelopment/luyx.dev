{
	"compilerOptions": {
		"target": "ES2022",
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext"
		],
		"declaration": true,
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true
	},
	"include": [
		"next-env.d.ts",
		"src/**/*.ts",
		"components/**/*.tsx",
		"lib/**/*.tsx",
		"pages/**/*.tsx"
	],
	"exclude": [
		"node_modules"
	]
}